<div class="show-banner">
  <h1 id="show-name"><%= @list.name %> movies</h1>
</div>
<div class="container">

<%= link_to("+ Add a movie", new_list_bookmark_path(@list), class:"add-movie") %>

  <div class="cards">

    <% @list.bookmarks.each do |bookmark|%>
    <div class="movie-card">
      <div class="movie-image">
        <img src='<%=bookmark.movie.poster_url%>' alt="movie-img" class="movie-img">
      </div>
      <div class="first-line">
        <h3><%=bookmark.movie.title%></h3>
        <p class="title-rating"><i class="fas fa-star"></i><%=bookmark.movie.rating%></p>
      </div>
      <div class="second-line">
        <p class="overview"><%=bookmark.movie.overview%></p>
      </div>
      <div class="third-line">
        <p><%=bookmark.comment%></p>
                <%= link_to bookmark_path(bookmark),
                      method: :delete,
                      data: { confirm: "Are you sure?" }, class:'remove' do %>
                      <i class="fas fa-trash-alt"></i>
                      <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
